- title "Detalhes da Conta"
- apagar_path account_path(@account)
= content_for :symbol do
  %i.fa.fa-fw.fa-book
- heading @account.name || "???"
%p
  %b Tipo:
  = @account.type
%p
  %b Saldo:
  = @account.balance
%hr
.container
  .row
    .col-md-5
      %h3 Créditos
      %p= render "credits"
    .col-md-2
    .col-md-5
      %h3 Débitos
      %p= render "debits"
