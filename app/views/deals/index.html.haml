#page-wrapper
  = fa_page_header("Listagem de Negócios", "money")
  .row
    .col-lg-12
      .panel.panel-red
        .panel-heading Compras
        .panel-body
          .dataTable_wrapper
            %table.table.table-stripped.table-bordered.table-hover#dataTables-buys
              %thead
                %tr
                  %th Data
                  %th Preço
                  %th Número de Machos
                  %th Número de Fêmeas
                  %th Peso Vivo
                  %th Finalidade
                  %th Contato
                  %th Ações

              %tbody
                - @buys.each do |deal|
                  %tr
                    %td= deal.date
                    %td= deal.price
                    %td= deal.males
                    %td= deal.females
                    %td= deal.live_weight
                    %td= deal.reason
                    %td= deal.partner || "Não informado"
                    %td
                      =link_to 'Detalhes', deal, class: "btn btn-default"
                      =link_to 'Editar', edit_deal_path(deal), class: "btn btn-default"
                      =link_to 'Apagar', deal, :method => :delete, :data => { :confirm => 'Tem certeza que deseja apagar?' }, class: "btn btn-default"
  .row
    .col-lg-12
      .panel.panel-primary
        .panel-heading Vendas
        .panel-body
          .dataTable_wrapper
            %table.table.table-stripped.table-bordered.table-hover#dataTables-sales
              %thead
                %tr
                  %th Data
                  %th Preço
                  %th Número de Machos
                  %th Número de Fêmeas
                  %th Peso Vivo
                  %th Peso Morto
                  %th Finalidade
                  %th Contato
                  %th Ações

              %tbody
                - @sales.each do |deal|
                  %tr
                    %td= deal.date
                    %td= deal.price
                    %td= deal.males
                    %td= deal.females
                    %td= deal.live_weight
                    %td= deal.dead_weight
                    %td= deal.reason
                    %td= deal.partner || "Não informado"
                    %td
                      =link_to 'Detalhes', deal, class: "btn btn-default"
                      =link_to 'Editar', edit_deal_path(deal), class: "btn btn-default"
                      =link_to 'Apagar', deal, :method => :delete, :data => { :confirm => 'Tem certeza que deseja apagar?' }, class: "btn btn-default"
