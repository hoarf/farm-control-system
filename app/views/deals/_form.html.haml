= simple_form_for @deal do |f|
  = f.input :deal_type, collection: [ "Compra", "Venda" ], selected: "Venda"
  = f.input :date
  = f.input :price
  = f.input :males
  = f.input :females
  = f.input :live_weight
  = f.input :dead_weight
  = f.input :reason
  = f.input :partner, collection: @partners, selected: @deal.partner
  = f.button :submit
