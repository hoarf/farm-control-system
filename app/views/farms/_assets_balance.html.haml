%h2 Balanço Patrional
%hr
.container-fluid
  .row
    .col-md-6
      %h3 Ativos
      - assets_balance.actives.each do |a|
        %p= a
    .col-md-6
      .container-fluid
        .row
          .col-md-12
            %h3 Passivos
            - assets_balance.passives.each do |p|
              %p= p
        .row
          .col-md-12
            %hr
        .row
          .col-md-12
            %h3 Patrimônio Líquido
            - assets_balance.pl.each do |pl|
              %p= pl
  .row
    .col-md-12
      %hr
  .row
    .col-md-3
      %h3
        %b Total
    .col-md-3
      %h3
        %b= assets_balance.total_actives
    .col-md-3
      %h3
        %b Total
    .col-md-3
      %h3
        %b= assets_balance.total_passives
