- present(balance_sheet) do |bc|
  %h2 Balanço Patrional
  %hr
  .container-fluid
    .row
      .col-md-6
        %h3 Ativos
        - bc.actives.each do |a|
          %p= a
      .col-md-6
        .container-fluid
          .row
            .col-md-12
              %h3 Passivos
              - bc.passives.each do |p|
                %p= p
          .row
            .col-md-12
              %hr
          .row
            .col-md-12
              %h3 Patrimônio Líquido
              - bc.pl.each do |pl|
                %p= pl
    .row
      .col-md-12
        %hr
    .row
      .col-md-3
        %h3
          %b Total
      .col-md-3
        %h3
          %b= bc.total_actives
      .col-md-3
        %h3
          %b Total
      .col-md-3
        %h3
          %b= bc.total_passives
