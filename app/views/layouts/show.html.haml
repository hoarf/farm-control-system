<!DOCTYPE html>
%html
  = render "shared/head"
  %body
    #wrapper
      = render "shared/navigation"
      #page-wrapper
        = render "shared/title"
        .row
          .col-md-6
            .panel.panel-default
              .panel-heading
                =yield :symbol
                =yield :heading
                .pull-right
                  .btn-group
                    %button.btn.btn-default.btn-xs.dropdown-toggle{ data: { toggle: "dropdown" }, aria: { expanded: "false" } }
                      Ações
                      %span.carret
                    %ul.dropdown-menu.pull-right{ role: 'menu' }
                      %li= link_to "Ver outros", url_for(action: :index)
                      %li= link_to "Editar", url_for(action: :edit)
                      %li= yield :apagar_path
              .panel-body
                = yield


      = render "shared/footer"
