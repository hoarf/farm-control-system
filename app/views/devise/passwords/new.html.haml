.header.fa-heading
  =render "shared/header"
  .container
    .row
      .col-lg-4.col-lg-offset-4
        .panel.panel-default
          .panel-heading
            %h4 Esqueceu a Senha?
          .panel-body.fa-login
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , role: "form"}) do |f|
              = f.input :email, autofocus: true
              = f.button :submit, "Recuperar Senha", class: 'btn-block btn-primary'
