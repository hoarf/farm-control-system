- if devise_mapping.registerable? && controller_name != 'registrations'
  %a.btn.btn-link{ href: new_registration_path(resource_name) } Cadastrar
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %a.btn.btn-link{ href: new_password_path(resource_name) } Esqueceu a senha?

// Unused

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Reenviar confirmação", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && controller_name != 'unlocks'
  = link_to "Reenviar desbloqueio", new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Se conecte com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)
    %br/
